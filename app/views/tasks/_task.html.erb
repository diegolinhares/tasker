<div class="list-group-item d-flex justify-content-between" data-controller="task" data-id="<%= task.id %>">
  <div class="custom-control custom-checkbox">
    <input type="checkbox" class="custom-control-input" id="<%= dom_id(task) %>" data-reflex="change->Task#toggle" data-id="<%= task.id %>" <%= 'checked' if task.complete? %>>
    <label for="<%= dom_id(task) %>" class="custom-control-label">
      <% if task.complete? %>
        <del>
          <%= task.name %>
        </del>
      <% else %>
        <%= task.name %>
      <% end %>
    </label>
  </div>
  
  <%= content_tag(:div) do%>
    <%= link_to nil, data: { action: 'click->task#destroy', id: task.id } do %>
      <%= content_tag(:i, nil, class: 'fa fa-times text-danger') %>
    <% end %>
  <% end %>
</div>